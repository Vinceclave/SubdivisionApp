<script>
    document.addEventListener("DOMContentLoaded", function() {
        
        const tabs = document.querySelectorAll('.flex.border-b.border-gray-200.mb-4 button');
        
        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                
                tabs.forEach(t => {
                    t.classList.remove('text-blue-600', 'border-b-2', 'border-blue-600');
                    t.classList.add('text-gray-500');
                });
                
                
                this.classList.remove('text-gray-500');
                this.classList.add('text-blue-600', 'border-b-2', 'border-blue-600');
                
                
            });
        });
        
        
        const modal = document.getElementById('vehicleDetailsModal');
        const closeModalBtn = document.getElementById('closeModal');
        const viewButtons = document.querySelectorAll('.view-btn');
        
        
        function openModal(data) {
            
            document.getElementById('modal-name').textContent = data.name;
            document.getElementById('modal-address').textContent = data.address;
            document.getElementById('modal-phone').textContent = data.phone;
            document.getElementById('modal-type').textContent = data.type;
            document.getElementById('modal-color').textContent = data.color;
            document.getElementById('modal-plate').textContent = data.plate;
            document.getElementById('modal-date').textContent = data.date;
            
            
            const statusBadge = document.getElementById('modal-status');
            statusBadge.textContent = data.status;
            
            
            statusBadge.classList.remove('bg-yellow-100', 'text-yellow-800', 'bg-green-100', 'text-green-800', 'bg-red-100', 'text-red-800');
            
            
            if (data.status === 'Pending') {
                statusBadge.classList.add('bg-yellow-100', 'text-yellow-800');
            } else if (data.status === 'Approved') {
                statusBadge.classList.add('bg-green-100', 'text-green-800');
            } else if (data.status === 'Rejected') {
                statusBadge.classList.add('bg-red-100', 'text-red-800');
            }
            
            
            const rejectBtn = document.getElementById('modal-reject-btn');
            const approveBtn = document.getElementById('modal-approve-btn');
            
            if (data.status === 'Approved') {
                approveBtn.classList.add('hidden');
                rejectBtn.textContent = 'Revoke';
            } else if (data.status === 'Rejected') {
                rejectBtn.classList.add('hidden');
            } else {
                rejectBtn.classList.remove('hidden');
                approveBtn.classList.remove('hidden');
                rejectBtn.textContent = 'Reject';
            }
            
            
            modal.classList.remove('hidden');
        }
        
        
        viewButtons.forEach(button => {
            button.addEventListener('click', function() {
                const data = {
                    name: this.getAttribute('data-name'),
                    address: this.getAttribute('data-address'),
                    phone: this.getAttribute('data-phone'),
                    type: this.getAttribute('data-type'),
                    color: this.getAttribute('data-color'),
                    plate: this.getAttribute('data-plate'),
                    date: this.getAttribute('data-date'),
                    status: this.getAttribute('data-status')
                };
                openModal(data);
            });
        });
        
        
        closeModalBtn.addEventListener('click', function() {
            modal.classList.add('hidden');
        });
        
        
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.classList.add('hidden');
            }
        });
        
        
        document.getElementById('modal-approve-btn').addEventListener('click', function() {
            alert('Vehicle approved!');
            modal.classList.add('hidden');
        });
        
        document.getElementById('modal-reject-btn').addEventListener('click', function() {
            alert(this.textContent === 'Revoke' ? 'Approval revoked!' : 'Vehicle rejected!');
            modal.classList.add('hidden');
        });
    });
</script>