<script>
    document.addEventListener("DOMContentLoaded", function() {
        
        const modal = document.getElementById('serviceRequestModal');
        const closeModalBtn = document.getElementById('closeModal');
        const viewButtons = document.querySelectorAll('.view-btn');
        
        
        const requestData = {
            1: {
                name: "Nancy Romales",
                address: "42 Maple Street",
                phone: "09310159072",
                type: "Maintenance",
                description: "Broken Faucet in master bedroom",
                priority: "URGENT",
                priorityClass: "bg-red-500 text-white",
                status: "Pending",
                statusClass: "bg-yellow-100 text-yellow-800",
                assigned: "",
                date: "03/25/25",
                time: "1:30 PM",
                attachment: "bath.jpg"
            },
            2: {
                name: "John Paul Layson",
                address: "15 Oak Avenue",
                phone: "09876543210",
                type: "Maintenance",
                description: "Broken Faucet in master bedroom",
                priority: "MEDIUM",
                priorityClass: "bg-green-500 text-white",
                status: "Completed",
                statusClass: "bg-green-100 text-green-800",
                assigned: "Maria Clara",
                date: "03/22/25",
                time: "10:00 AM",
                attachment: "sink.jpg"
            },
            3: {
                name: "Maria Magdalena",
                address: "8 Pine Road",
                phone: "09123456789",
                type: "Housekeeping",
                description: "Broken Faucet in master bedroom",
                priority: "LOW",
                priorityClass: "bg-yellow-500 text-white",
                status: "Cancelled",
                statusClass: "bg-red-100 text-red-800",
                assigned: "",
                date: "03/21/25",
                time: "3:45 PM",
                attachment: "room.jpg"
            }
        };
        
        
        function openModal(id) {
            const data = requestData[id];
            if (!data) return;
            
           
            document.getElementById('modal-name').textContent = data.name;
            document.getElementById('modal-address').textContent = data.address;
            document.getElementById('modal-phone').textContent = data.phone;
            document.getElementById('modal-type').textContent = data.type;
            document.getElementById('modal-description').textContent = data.description;
            document.getElementById('modal-date').textContent = data.date;
            document.getElementById('modal-time').textContent = data.time;
            document.getElementById('modal-attachment').textContent = data.attachment;
            
            
            const priorityBadge = document.getElementById('modal-priority');
            priorityBadge.textContent = data.priority;
            priorityBadge.className = `px-2 py-1 text-xs font-medium ${data.priorityClass} rounded`;
            
            
            const statusBadge = document.getElementById('modal-status');
            statusBadge.textContent = data.status;
            statusBadge.className = `px-2 py-1 text-xs font-medium ${data.statusClass} rounded`;
            
            
            const assignSelect = document.getElementById('modal-assigned-select');
            if (data.assigned) {
                
                Array.from(assignSelect.options).forEach(option => {
                    if (option.text === data.assigned) {
                        option.selected = true;
                    }
                });
            } else {
               
                assignSelect.selectedIndex = 0;
            }
            
           
            const assignBtn = document.getElementById('modal-assign-btn');
            const cancelBtn = document.getElementById('modal-cancel-btn');
            
            if (data.status === 'Completed' || data.status === 'Cancelled') {
                assignBtn.classList.add('hidden');
                cancelBtn.classList.add('hidden');
            } else {
                assignBtn.classList.remove('hidden');
                cancelBtn.classList.remove('hidden');
            }
            
            
            modal.classList.remove('hidden');
        }
        
       
        viewButtons.forEach(button => {
            button.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                openModal(id);
            });
        });
        
        
        closeModalBtn.addEventListener('click', function() {
            modal.classList.add('hidden');
        });
        
       
        window.addEventListener('click', function(event) {
            if (event.target === modal) {
                modal.classList.add('hidden');
            }
        });
        
        
        document.getElementById('modal-assign-btn').addEventListener('click', function() {
            const selectedStaff = document.getElementById('modal-assigned-select').options[document.getElementById('modal-assigned-select').selectedIndex].text;
            if (selectedStaff === 'Select Staff') {
                alert('Please select a staff member first!');
            } else {
                alert(`Service request assigned to ${selectedStaff}!`);
                modal.classList.add('hidden');
            }
        });
        
        document.getElementById('modal-cancel-btn').addEventListener('click', function() {
            alert('Service request cancelled!');
            modal.classList.add('hidden');
        });
    });
</script>