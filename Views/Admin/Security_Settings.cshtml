@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    ViewData["Title"] = "Security_Settings";

    // Fix nullable warning
    string userRole = ViewBag.UserRole as string ?? "Guest";
}


<div class="flex flex-col h-screen bg-gray-100">
    
   
    <main class="flex-1">
       
        <div class="bg-gray-200 p-4">
            <h1 class="text-lg font-medium">Settings</h1>
        </div>
        
     
        <div class="bg-white border border-gray-200 mb-6">
            <div class="flex flex-col items-center py-6">
                <div class="relative">
                    <img src="/images/avatar-woman.png" alt="Profile Avatar" class="w-20 h-20 rounded-full object-cover">
                    <div class="absolute bottom-0 right-0 bg-white rounded-full p-1 border border-gray-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                </div>
                <h2 class="text-lg font-medium mt-2">Maria Clara</h2>
                <p class="text-sm text-gray-500">Staff - Security</p>
            </div>
        </div>
        
        <div class="flex">
            
            <div class="w-8 bg-green-800 flex-shrink-0"></div>
            
           
            <div class="flex-1">
              
                <div class="bg-white border-t border-r border-b border-gray-200 p-6 mb-6">
                    <h2 class="text-lg font-medium mb-6">My Personal Information</h2>
                    
                    <form>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div>
                                <label for="firstName" class="block text-sm font-medium mb-1">First Name</label>
                                <input type="text" id="firstName" value="Maria" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                            <div>
                                <label for="lastName" class="block text-sm font-medium mb-1">Last Name</label>
                                <input type="text" id="lastName" value="Clara" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                        </div>
                        
                        <div class="mb-6">
                            <div>
                                <label for="gender" class="block text-sm font-medium mb-1">Gender</label>
                                <input type="text" id="gender" class="w-full max-w-xs p-2 border border-gray-300 rounded">
                            </div>
                            <div>
                                <label for="address" class="block text-sm font-medium mb-1">Address</label>
                                <input type="text" id="address" value="123 LOT 5, house123" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                        </div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div>
                                <label for="email" class="block text-sm font-medium mb-1">Email</label>
                                <input type="email" id="email" value="clara@gmail.com" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                            <div>
                                <label for="phoneNumber" class="block text-sm font-medium mb-1">Phone Number</label>
                                <input type="tel" id="phoneNumber" value="+ 63124532" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                        </div>
                    </form>
                </div>
                
                
                <div class="bg-white border-t border-r border-b border-gray-200 p-6 mb-6">
                    <h2 class="text-lg font-medium mb-6">Change Password ?</h2>
                    
                    <form>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div>
                                <label for="newPassword" class="block text-sm font-medium mb-1">New Password</label>
                                <input type="password" id="newPassword" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                            <div>
                                <label for="confirmPassword" class="block text-sm font-medium mb-1">Confirm Password</label>
                                <input type="password" id="confirmPassword" class="w-full p-2 border border-gray-300 rounded">
                            </div>
                        </div>
                        
                        <div class="flex justify-end">
                            <button type="submit" class="bg-green-800 text-white px-4 py-2 rounded">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>