@{
    ViewData["Title"] = "Cleaning Schedule";
    Layout = "~/Views/Shared/_UniversalLayout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Cleaning Schedule</h1>
        <p class="text-gray-600 mt-2">Manage and track cleaning schedules for different areas.</p>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold text-gray-900">Weekly Schedule</h2>
            <button class="bg-primary text-white px-4 py-2 rounded-md hover:bg-primary-dark transition-colors">
                Add New Schedule
            </button>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Area</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Day</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assigned To</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <!-- Sample data - Replace with actual data from database -->
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Clubhouse</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Monday</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">9:00 AM - 12:00 PM</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Sarah Wilson</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Completed
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <button class="text-primary hover:text-primary-dark">Edit</button>
                            <button class="text-primary hover:text-primary-dark ml-4">View Details</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div> 