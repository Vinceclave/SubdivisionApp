                               class="nav-link @(ViewData["Page"]?.ToString() == "Community" ? "nav-link-active" : "")">
                                Community
                            </a>
                            <a asp-area="" asp-controller="@controllerPrefix" asp-action="Events" 
                               class="nav-link @(ViewData["Page"]?.ToString() == "Events" ? "nav-link-active" : "")">
                                Events
                            </a>
