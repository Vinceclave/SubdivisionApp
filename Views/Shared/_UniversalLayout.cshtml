                        var isLandingPage = ViewData["Page"]?.ToString() == "Landing";
                        var controllerPrefix = userType == "admin" ? "Admin" : (userType == "staff" ? "Staff" : "Homeowner");
                    }
                    
                    @if (string.IsNullOrEmpty(userType))
