@{
    var hideHeaderFooter = ViewData["HideHeaderFooter"] as bool? ?? false;
    var isDashboard = ViewData["Page"] as string == "Dashboard";
    var isLanding = ViewData["Page"] as string == "Landing";
    var isLogin = ViewData["Page"] as string == "Login";
    var isSecurity = ViewData["Page"] as string == "Security";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <style>
        body {
            background-color: #F9FBF3;
        }
        
        .header-nav {
            background-color: #445E4F;
            padding: 10px 0;
        }
        
        .header-nav a {
            color: #FBFCF4;
            margin: 0 10px;
            padding: 5px 12px;
            border-radius: 12px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }
        
        .header-nav a:hover {
            background-color: #374836;
        }
        
        .footer-section {
            background-color: #F9FBF3;
            padding: 20px 0;
            border-top: 1px solid #D9DED5;
        }

        .line::before,
         .line::after {
             content: "";
             flex-grow: 1;
             border-top:1px solid black;
             margin: 0
         }

        .line {
             display: flex;
             align-items: center;
         }
    </style>
</head>

<body class="font-sans leading-normal tracking-normal">
    <!-- Header -->
    @if (!isLogin && !isDashboard && !isSecurity)
    {
        <header class="header-nav w-full">
            <div class="container mx-auto flex justify-center">
                <a asp-controller="Home" asp-action="Index" class="hover:bg-[#374836] rounded-xl">HOME</a>
                <a href="/about" class="hover:bg-[#374836] rounded-xl">FACILITIES</a>
                <a asp-controller="Account" asp-action="Login" class="hover:bg-[#374836] rounded-xl">LOG IN</a>
            </div>
        </header>
    }
    
    <!-- Main Content -->
    <div class="body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    @if (isLanding && !isDashboard && !isSecurity)
    {   
    <footer class="footer-section">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Left Column -->
