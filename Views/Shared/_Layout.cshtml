                </div>
            </div>

            <div class="text-center text-xs text-[#445E4F] mt-8 pt-4 border-t border-[#D9DED5]">
                <p>Copyright © 2025 Beverly Woods | All Rights Reserved | Terms and Conditions | Privacy Policy</p>
            </div>
        </div>
    </footer>
   } 

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>