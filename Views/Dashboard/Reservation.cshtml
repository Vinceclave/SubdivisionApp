<script>
    document.addEventListener("DOMContentLoaded", function() {
   
        const datePicker = document.getElementById('datePicker');
        const selectedDate = document.getElementById('selectedDate');
        const dateInput = document.getElementById('dateInput');

        if (datePicker && selectedDate && dateInput) {
            datePicker.addEventListener('click', function() {
                dateInput.click();
            });

            dateInput.addEventListener('change', function() {
                if (this.value) {
                    const date = new Date(this.value);
                    const options = { year: 'numeric', month: 'long', day: 'numeric' };
                    selectedDate.textContent = date.toLocaleDateString('en-US', options);
                }
            });
        }

       
        const modalDatePicker = document.getElementById('modalDatePicker');
        const modalSelectedDate = document.getElementById('modalSelectedDate');
        const modalDateInput = document.getElementById('modalDateInput');

        if (modalDatePicker && modalSelectedDate && modalDateInput) {
            modalDatePicker.addEventListener('click', function() {
                modalDateInput.click();
            });

            modalDateInput.addEventListener('change', function() {
                if (this.value) {
                    const date = new Date(this.value);
                    const options = { year: 'numeric', month: 'long', day: 'numeric' };
                    modalSelectedDate.textContent = date.toLocaleDateString('en-US', options);
                }
            });
        }

        
        const reserveNowBtn = document.getElementById('reserveNowBtn');
        const reserveFacilityModal = document.getElementById('reserveFacilityModal');
        const closeReserveBtn = document.getElementById('closeReserveBtn');

        if (reserveNowBtn && reserveFacilityModal && closeReserveBtn) {
            reserveNowBtn.addEventListener('click', function() {
                reserveFacilityModal.classList.remove('hidden');
            });

            closeReserveBtn.addEventListener('click', function() {
                reserveFacilityModal.classList.add('hidden');
            });
        }

      
        const myReservation1 = document.getElementById('myReservation1');
        const reservationDetailsModal = document.getElementById('reservationDetailsModal');
        const closeDetailsBtn = document.getElementById('closeDetailsBtn');

        if (myReservation1 && reservationDetailsModal && closeDetailsBtn) {
            myReservation1.addEventListener('click', function() {
                reservationDetailsModal.classList.remove('hidden');
            });

            closeDetailsBtn.addEventListener('click', function() {
                reservationDetailsModal.classList.add('hidden');
            });
        }

     
        window.addEventListener('click', function(event) {
            if (event.target === reserveFacilityModal) {
                reserveFacilityModal.classList.add('hidden');
            }
            if (event.target === reservationDetailsModal) {
                reservationDetailsModal.classList.add('hidden');
            }
        });
    });
</script>