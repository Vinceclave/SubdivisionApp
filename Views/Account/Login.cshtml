@{
    ViewData["Title"] = "Login";
    ViewData["Page"] = "Login";
}

<div class="h-screen flex">
    <!-- Left Side (Image) -->
    <div class="w-1/2 bg-cover bg-center" style="background-image: url('/images/house.jpg');"></div>
    
    <!-- Right Side (Login Form) -->
    <div class="w-1/2 flex justify-center items-center bg-[#F5F5EB]">
        <div class="bg-white shadow-lg border border-gray-300 rounded-lg p-8 w-96">
            <h2 class="text-xl font-bold text-green-900 text-center mb-4">Sign In</h2>
            
            @if (ViewBag.Message != null)
            {
                <p class="text-red-500 text-center">@ViewBag.Message</p>
            }

            <form method="post" class="space-y-4">
                <div>
                    <label class="block text-gray-700 font-semibold">Email</label>
                    <input type="usernamem" name="username" class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-green-900" required />
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Password</label>
                    <input type="password" name="password" class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-green-900" required />
                </div>
                
                <div class="flex justify-between items-center">
                    <label class="flex items-center text-gray-700">
                        <input type="checkbox" class="mr-2"> Remember me
                    </label>
                    <a href="#" class="text-sm text-green-900 hover:underline">Forgot Password?</a>
                </div>
                
                <button type="submit" class="w-full bg-green-900 text-white font-bold p-2 rounded">SIGN IN</button>
            </form>
            
            <p class="mt-4 text-center text-gray-600 text-sm">&copy; 2025 Beverly Woods. All rights reserved.<br>
                <a href="#" class="hover:underline">Privacy Policy</a> | <a href="#" class="hover:underline">Terms of Service</a>
            </p>
        </div>
    </div>
</div>
