@{
    ViewData["Title"] = "Login";
    ViewData["Page"] = "Login";
}

<div class="body-content h-screen flex justify-center items-center">
    <div class="bg-black bg-opacity-60 shadow-lg border border-black rounded-lg p-8 w-96">
        <h2 class="text-2xl font-bold text-white text-center mb-4">WELCOME</h2>

        @if (ViewBag.Message != null)
        {
            <p class="text-red-500 text-center">@ViewBag.Message</p>
        }

        <form method="post" class="space-y-4">
            <div>
                <label class="block text-white font-semibold">Username</label>
                <input type="text" name="username" class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500" required />
            </div>

            <div>
                <label class="block text-white font-semibold">Password</label>
                <input type="password" name="password" class="w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500" required />
            </div>

            <button type="submit" class="w-full bg-green-500 text-black font-black p-2 rounded">
                LOG IN
            </button>
        </form>

        <p class="mt-4 text-center text-white">
            Don't have an account?
            <a asp-controller="Account" asp-action="Register" class="text-blue-500 hover:underline">Register here</a>
        </p>
    </div>
</div>
