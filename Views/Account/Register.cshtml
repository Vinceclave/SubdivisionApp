@{
    ViewData["Title"] = "Register";
}

<h2 class="text-2xl font-bold text-center">Register</h2>
<form method="post">
    <div class="mb-4">
        <label class="block text-gray-700">Username</label>
        <input type="text" name="Username" class="w-full p-2 border rounded" required />
    </div>
    <div class="mb-4">
        <label class="block text-gray-700">Full Name</label>
        <input type="text" name="UserFname" class="w-full p-2 border rounded" required />
    </div>
    <div class="mb-4">
        <label class="block text-gray-700">Email</label>
        <input type="email" name="UserEmail" class="w-full p-2 border rounded" required />
    </div>
    <div class="mb-4">
        <label class="block text-gray-700">Password</label>
        <input type="password" name="PasswordHash" class="w-full p-2 border rounded" required />
    </div>
    <button type="submit" class="w-full bg-green-500 text-white p-2 rounded">Register</button>
</form>

<p class="mt-4 text-center">
    Already have an account?
    <a asp-controller="Account" asp-action="Login" class="text-blue-500 hover:underline">Login here</a>
</p>
