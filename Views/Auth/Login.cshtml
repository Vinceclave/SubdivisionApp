@model dynamic

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Page"] = "Login";
}

<div class="min-h-screen flex flex-col md:flex-row">
    <!-- Left Side (Image) -->
    <div class="hidden md:block md:w-1/2 bg-cover bg-center" 
         style="background-image: url('/images/house.jpg');">
        <div class="h-full w-full bg-black bg-opacity-50 flex items-center justify-center p-12">
            <div class="text-white">
                <h1 class="text-4xl font-bold mb-4">Welcome to Beverly Woods</h1>
                <p class="text-lg opacity-90">Experience luxury living in our exclusive subdivision community.</p>
            </div>
        </div>
    </div>
    
    <!-- Right Side (Login Form) -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-4 md:p-8 lg:p-12">
        <div class="w-full max-w-md space-y-8">
            <!-- Logo or Branding -->
            <div class="text-center">
                <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Sign in to your account</h2>
                <p class="mt-2 text-sm text-gray-600">
                    Welcome back! Please enter your details.
                </p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="rounded-md bg-red-50 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-red-800">@TempData["Error"]</p>
                        </div>
                    </div>
                </div>
            }

            <form class="mt-8 space-y-6" method="post" asp-controller="Auth" asp-action="Login">
                @Html.AntiForgeryToken()
                
                <div class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                        <div class="mt-1">
                            <input id="username" 
                                   name="username" 
                                   type="text" 
                                   required 
                                   class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
                                   placeholder="Enter your username">
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                        <div class="mt-1">
                            <input id="password" 
                                   name="password" 
                                   type="password" 
                                   required 
                                   class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
                                   placeholder="••••••••">
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" 
                               name="remember-me" 
                               type="checkbox"
                               class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary">
                        <label for="remember-me" class="ml-2 block text-sm text-gray-900">Remember me</label>
                    </div>

                    <div class="text-sm">
                        <a href="#" class="font-medium text-primary hover:text-primary-700">Forgot your password?</a>
                    </div>
                </div>

                <div>
                    <button type="submit" 
                            class="flex w-full justify-center rounded-md border border-transparent bg-primary px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
                        Sign in
                    </button>
                </div>
            </form>

            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="bg-white px-2 text-gray-500">Need help?</span>
                    </div>
                </div>

                <div class="mt-6 text-center text-sm text-gray-500">
                    <p>Contact your administrator or property management for assistance.</p>
                </div>
            </div>

            <div class="mt-8 text-center text-xs text-gray-500">
                <p>&copy; @DateTime.Now.Year Beverly Woods. All rights reserved.</p>
                <div class="mt-2 space-x-2">
                    <a href="#" class="hover:text-gray-900">Privacy Policy</a>
                    <span>·</span>
                    <a href="#" class="hover:text-gray-900">Terms of Service</a>
                </div>
            </div>
        </div>
    </div>
</div>